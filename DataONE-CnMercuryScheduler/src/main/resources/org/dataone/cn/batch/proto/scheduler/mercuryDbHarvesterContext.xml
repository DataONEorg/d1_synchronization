<?xml version="1.0" encoding="UTF-8"?>
<beans default-init-method="init" xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

<bean id="access" class="org.dataone.cn.mercury.DBAccessor">
        <property name="driver" value="${mercury3.driverClassName}"/>
        <property name="url" value="${mercury3.url}"/>
        <property name="userName" value="${mercury3.username}"/>
        <property name="password" value="${mercury3.password}"/>
	<property name="dbName" value="${mercury3.solrdb}"/>
</bean>

<bean id="iidbAccess" class="org.dataone.cn.mercury.IndexInfoDB">
	<property name="access" ref="access" />
</bean>

<bean id="mercuryDbHarvester" class="org.dataone.cn.mercury.Harvester">
      <property name="basedir">
	      <value>${mercury3.basedir}</value>
      </property>
      <property name="instance">
	      <value>${mercury3.instance}</value>
      </property>
      <property name="htmlurl">
	      <value>${mercury3.htmlurl}</value>
      </property>
      <property name="log">
	      <value>true</value>
      </property>
	<property name="access" ref="access" />
	<property name="iidb" ref="iidbAccess" />
</bean>

</beans>
