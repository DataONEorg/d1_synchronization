<beans default-init-method="init" xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

    <bean id="dryadTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="dryadDocumentDatabaseTarget" class="index_utils.DefaultDocumentDatabase">
        <property name="dataSource" ref="dataSource"/>
        <property name="solrPostURL">
            <value>${mercury3.solrPostURL}</value>
        </property>
        <property name="solrdb">
            <value>${mercury3.solrdb}</value>
        </property>
        <property name="source">
            <value>dryad</value>
        </property>
        <property name="instance">
            <value>${mercury3.instance}</value>
        </property>
    </bean>

    <bean id="dryadDocumentDatabase" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager" ref="dryadTransactionManager"/>
        <property name="target" ref="dryadDocumentDatabaseTarget"/>
        <property name="transactionAttributes">
            <props>
                <prop key="getSources">PROPAGATION_REQUIRED,readOnly</prop>
            </props>
        </property>
    </bean>

    <bean id="dryadSolrXPathPrototype" class="org.dataone.cn.mercury.Solr_XPath_Prototype">
        <constructor-arg index="0" >
            <ref bean="mets" />
        </constructor-arg>
        <constructor-arg index="1">
            <ref bean="dataoneMercuryNamespaceContext"/>
        </constructor-arg>
    </bean>
    <bean id="dryadXpathHandler" class="org.dataone.cn.mercury.XPath_Handler">
<!--        <property name="lookupProperties">
            <ref bean="metsLookupProperties"/>
        </property> -->
        <property name="spe">
            <ref bean="dryadSolrXPathPrototype"/>
        </property>
    </bean>

    <bean id="dryadIndexer" class="org.dataone.cn.mercury.Indexer">
        <property name="instance"><value>${mercury3.instance}</value></property>
        <property name="source"><value>dryad</value></property>
        <property name="solrdb"><value>${mercury3.solrdb}</value></property>
        <property name="solrPostURL"><value>${mercury3.solrPostURL}</value></property>
        <property name="sxp">
            <ref bean="dryadSolrXPathPrototype" />
        </property>
        <property name="xpathHandler">
            <ref bean="dryadXpathHandler" />
        </property>
        <property name="traceList">
        <ref bean="testFileInfo" />
        </property>
        <property name="documentDatabase">
            <ref bean="dryadDocumentDatabase" />
        </property>
    </bean>

</beans>
